
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    function isOwnerOrAdmin(userId) {
        return isOwner(userId) || isAdmin();
    }

    // Users Collection
    // - Users can read/update their own profile.
    // - Admins can read/write any user profile.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow read, write: if isAdmin();
    }

    // Projects Collection
    // - Anyone can read projects.
    // - Only admins can create, update, delete projects.
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Reviews Collection
    // - Anyone can read reviews.
    // - Only admins can create, update, or delete reviews.
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Carts Collection
    // - Users can only read and write to their own cart.
    match /carts/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Sales Collection
    // - Users can read their own sales history.
    // - Users can create new sales records (on checkout).
    // - Admins can read all sales.
    match /sales/{saleId} {
       allow read: if isOwner(request.resource.data.userId) || isAdmin();
       allow create: if isSignedIn();
       allow delete, update: if isAdmin();
    }

    // Inquiries Collection
    // - Anyone can create an inquiry.
    // - Users can read their own inquiries.
    // - Admins can read/delete all inquiries.
    match /inquiries/{inquiryId} {
      allow create: if true;
      allow read, list: if isSignedIn() && (resource == null || isOwner(resource.data.userId) || isAdmin());
      allow update, delete: if isAdmin();
    }
  }
}
