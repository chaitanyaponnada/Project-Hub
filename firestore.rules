
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /projects/{projectId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    match /inquiries/{inquiryId} {
      allow create: if request.auth != null;
      allow list, read: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    match /users/{userId} {
      // Users can create their own document, and read it.
      allow create, read: if request.auth != null && request.auth.uid == userId;
      // Allow users to update their own document.
      allow update: if request.auth != null && request.auth.uid == userId;
    }
    match /admins/{adminId} {
        // Admins can read their own document or any admin document if they are an admin.
        allow read: if request.auth.uid == adminId || get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
        // Only admins can list all admins.
        allow list: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}

    