
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    function isUser() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    // USERS
    match /users/{userId} {
      allow read, update: if isOwner(userId) || isAdmin();
      allow create: if isAuth(); // Allow user creation on signup
      allow delete: if isAdmin();
    }
    
    // PROJECTS
    match /projects/{projectId} {
      allow read: if isAuth(); // Allow authenticated users to see projects
      allow create, update, delete: if isAdmin();
    }

    // REVIEWS
    match /reviews/{reviewId} {
      allow read: if true; // Everyone can read reviews
      allow create, update, delete: if isAdmin();
    }
    
    // CARTS
    match /carts/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // SALES
    match /sales/{saleId} {
      // Allow user to create a sale record for themselves upon checkout
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      // Allow owner to read their own sales, and admin to read all sales
      allow read: if (isAuth() && isOwner(resource.data.userId)) || isAdmin();
      allow list: if isAdmin(); // Only admins can list all sales
      allow update, delete: if isAdmin();
    }
    
    // INQUIRIES
    match /inquiries/{inquiryId} {
        allow create: if true; // Anyone can send an inquiry
        allow read, list, update, delete: if isAdmin();
    }
  }
}
